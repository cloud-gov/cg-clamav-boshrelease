---
name: clamav-config
provides:
- name: clamav-config
  type: config
  properties:
  - clamd-config.additional_options
  - freshclam-config.additional_options
properties:
  clamd-config.additional_options:
    description: "Additional ClamAV options to be added to clamd.conf - yml array"
    example: |
      - OnAccessExcludePath /var/vcap/packages/clamd
  freshclam-config.additional_options:
    description: "Additional freshclam options to be added to clamd.conf - yml array"
    example: |
      - PrivateMirror http://mirror.mylan:8000
